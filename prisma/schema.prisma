// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Batch {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  batchSize      Float
  batchSizeUOM   Volume @relation(fields: [batchSizeUOMid], references: [id])
  batchSizeUOMid String @db.ObjectId
  datePitched    String
  user           User   @relation(fields: [userId], references: [id])
  userId         String @db.ObjectId
}

model User {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  email        String  @unique
  isActive     Boolean @default(true)
  isAdmin      Boolean @default(false)
  passwordHash String
  batches      Batch[]
}

model Volume {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  name    String  @unique
  batches Batch[]
}

model Yeast {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String @unique
  tolerance Float
}
